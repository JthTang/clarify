<%= render 'shared/search' %>
<div class="user-banner">
  <% if @user == current_user %>
    <h2> My Shelf</h2>
  <% else %>
    <% if @user.first_name[-1].include?('s') %>
      <h2><%= @user.first_name+"'"+" "+'Shelf' %></h2>
    <% else %>
      <h2><%= @user.first_name+'\'s'+ ' '+'Shelf' %></h2>
    <% end %>
  <% end %>
  <div class="user-info">
    <%= cl_image_tag @user.photo_path, alt: "user", class: "avatar-large"  %>
  </div>
</div>

<div class="container">


  <div class="my-shelf">
    <div class="product-cards">
      <% @user.find_up_voted_items.each do |product| %>

        <%= link_to product_path(product) do %>
        <div class="card-product">


          <%# if profuct.count_flag == 0 %>
            <!-- <i class="far fa-thumbs-up green"></i> -->
          <%# else %>
          <%# end %>


          <%= cl_image_tag product.photo_path, alt: "product" %>
            <strong><p class="mt-2"><%= product.brand.truncate(16) %></p></strong>
            <p><%= product.name.truncate(16) %></p>
            <!-- <p><%= product.category.truncate(16) %></p> -->
        </div>
        <% end %>
      <% end %>


    </div>


  </div>


</div>
