<div class="container">
  <% if @product.photo.attached? %>
    <% @path = @product.photo.key %>
  <% else %>
    <% @path = 'profile_whubsg' %>
  <% end %>

  <%= render 'shared/card-product', product: @product %>


  <% @product.reviews.each do |review| %>
    <% if review.product.photo.attached? %>
      <% @path = review.product.photo.key %>
    <% else %>
      <% @path = 'profile_whubsg' %>
    <% end %>
    <p><%= review.rating %></p>
    <p><%= review.content %></p>
  <% end %>
</div>
