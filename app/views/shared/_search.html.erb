<%= form_tag products_path, method: :get, class: "search-form" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control search-form-control rounded-0",
    placeholder: "Search"
  %>
  <%= button_tag type: 'submit', class: 'rounded-0 btn btn-flat' do %>
    <i class="fas fa-search" style="color: white;"></i>
  <% end %>
<% end %>
